    <div class="container">
        <div class="container">
            <!-- Title and Icon -->
            <div class="section-title">
                <i class="bi bi-plus-circle"></i>
                <h2>Add New Product</h2>
            </div>

            <div class="content-wrapper">
                <!-- General Information and Sale Details -->
                <div class="form-wrapper">
                    <!-- General Information -->
                    <div class="sale-details-container">
                        <h3>General Information</h3>
                        <form id="productForm">
                            <div class="form-group">
                                <label for="productName">Product Name</label>
                                <input type="text" class="form-control" id="productName"
                                    placeholder="Enter product name" required>
                            </div>

                            <div class="form-group">
                                <label for="productDescription">Product Description</label>
                                <textarea class="form-control" id="productDescription"
                                    placeholder="Describe the product" rows="3" required></textarea>
                            </div>

                            <div class="form-group">
                                <label for="quantity">Quantity</label>
                                <input type="number" class="form-control" id="quantity" placeholder="Enter quantity"
                                    required>
                            </div>
                            <div class="form-group">
                                <label for="quantity">Price</label>
                                <input type="number" class="form-control" id="quantity" placeholder="Enter Price '$'"
                                    required>
                            </div>
                        </form>
                    </div>

                    <!-- Sale Details -->
                    <div class="sale-details-container">
                        <h3>Sale Details</h3>

                        <div class="form-group">
                            <label for="type">Type</label>
                            <select class="form-control" id="type" required>
                                <option value="single">Single Product</option>
                                <option value="group">Group Products</option>

                            </select>
                        </div>
                        <div class="form-group">
                            <label for="category">Category</label>
                            <select class="form-control" id="category" required>
                                <option value="furniture">Furniture</option>
                                <option value="electronics">Electronics</option>
                                <option value="games">Electronic or Regular Games</option>
                                <option value="kit">Kit</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label>Commission Rates</label>
                            <ul>
                                <li>Furniture: 10%</li>
                                <li>Electronics: 15%</li>
                                <li>Electronic or Regular Games: 8%</li>
                                <li>Kit: 6%</li>
                            </ul>
                        </div>

                        <p class="note">* These percentages are paid every month for each single item and are considered
                            as a rental replacement if the product is returned after a certain period. If the full
                            amount is paid, the product is considered owned.</p>
                    </div>
                </div>

                <!-- Image Upload and Condition -->
                <div class="upload-container">
                    <h3>Upload Pictures</h3>
                    <div class="main-image" id="mainImage"></div>

                    <div class="form-group mt-4">
                        <label for="mainImageUpload">Upload Main Image</label>
                        <input type="file" id="mainImageUpload" class="form-control file-input" accept="image/*"
                            onchange="handleMainImageUpload(event)">
                    </div>

                    <div class="form-group mt-4">
                        <label for="imageUpload">Upload Multiple Images</label>
                        <input type="file" id="imageUpload" class="form-control file-input" accept="image/*"
                            onchange="handleImageUpload(event)" multiple>
                    </div>

                    <div class="small-images" id="smallImagesContainer"></div>

                    <div class="form-group mt-4">
                        <label for="productCondition">Condition</label>
                        <select class="form-control" id="productCondition" required>
                            <option value="new">New</option>
                            <option value="used">Used</option>
                        </select>
                    </div>
                </div>

            </div>

            <!-- Submit Button -->
            <div class="text-center mt-4">
                <button type="submit" onclick="submitProduct()" class="btn btn-primary">Save and Publish
                    Product</button>
            </div>
        </div>

