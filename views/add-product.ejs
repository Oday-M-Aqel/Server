            border-radius: 8px;
            margin-bottom: 10px;
            background-size: cover;
            background-position: center;
        }

        .upload-container .small-images {
            display: flex;
            justify-content: space-between;
        }

        .upload-container .small-images img {
            width: 23%;
            height: 100px;
            object-fit: cover;
            border: 2px solid #ccc;
            border-radius: 5px;
        }

        .content-wrapper {
            display: flex;
            justify-content: space-between;
        }

        .form-wrapper {
            flex: 1;
            margin-right: 30px;
        }

